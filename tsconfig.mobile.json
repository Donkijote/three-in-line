{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": "./mobile",
    "paths": {
      "@/convex/*": ["../convex/*"],
      "@/*": ["../src/*"],
      "react-native": ["./node_modules/react-native"],
      "expo-status-bar": ["./node_modules/expo-status-bar/build/StatusBar"],
      "react-native-safe-area-context": [
        "./node_modules/react-native-safe-area-context/lib/typescript/src/index"
      ],
      "nativewind": ["./node_modules/nativewind"],
      "nativewind/*": ["./node_modules/nativewind/*"],
      "expo-router": ["./node_modules/expo-router"],
      "expo-router/*": ["./node_modules/expo-router/*"],
      "expo-blur": ["./node_modules/expo-blur"],
      "expo-blur/*": ["./node_modules/expo-blur/*"],
      "expo-linear-gradient": ["./node_modules/expo-linear-gradient"],
      "expo-linear-gradient/*": ["./node_modules/expo-linear-gradient/*"],
      "expo-secure-store": ["./node_modules/expo-secure-store"],
      "expo-secure-store/*": ["./node_modules/expo-secure-store/*"],
      "lucide-react-native": ["./node_modules/lucide-react-native"],
      "@rn-primitives/slot": ["./node_modules/@rn-primitives/slot"]
    }
  },
  "include": [
    "mobile/**/*.ts",
    "mobile/**/*.tsx",
    "src/ui/mobile/**/*.ts",
    "src/ui/mobile/**/*.tsx",
    "src/domain/**/*.ts"
  ],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
