{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "!!**/src/ui/web/routeTree.gen.ts",
      "**/convex/**/*",
      "!!**/convex/_generated",
      "**/index.html",
      "**/vite.config.ts",
      "**/vitest.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              "react",
              ":BLANK_LINE:",
              [":PACKAGE:", "!@*/*", "!@*/*/**"],
              ":BLANK_LINE:",
              ["@*/*", "@*/*/**", "!@/**"],
              ":BLANK_LINE:",
              "@/**",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/ui/**/*"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "error",
              "options": {
                "patterns": [
                  {
                    "group": ["convex/*", "@/convex/*"],
                    "message": "Use infrastructure adapters instead of direct Convex imports in UI."
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}
